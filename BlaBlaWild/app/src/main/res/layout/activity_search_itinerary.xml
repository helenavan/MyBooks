<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.blablawild.SearchItineraryActivity">

    <EditText
        android:id="@+id/editTextSearchDeparture"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/parent"
        app:layout_constraintBottom_toTopOf="@+id/editTextSearchDestination"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        app:layout_constraintHorizontal_bias="0.12"
        android:hint="@string/departure"/>
    <EditText
        android:id="@+id/editTextSearchDestination"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editTextSearchDeparture"
        app:layout_constraintBottom_toTopOf="@+id/editTextSearchDate"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        app:layout_constraintHorizontal_bias="0.12"
        android:hint="@string/dest"/>
    <EditText
        android:id="@+id/editTextSearchDate"
        android:inputType="date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editTextSearchDestination"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        app:layout_constraintHorizontal_bias="0.12"
        android:hint="@string/date"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editTextSearchDate"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        android:text="@string/search_text"
        android:layout_marginTop="25dp"
        android:onClick=""
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.033" />

</android.support.constraint.ConstraintLayout>
