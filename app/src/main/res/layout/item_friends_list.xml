<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="4dp">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <ImageView
        android:id="@+id/item_list_picFriends"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_name_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name_list_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="user name"
        android:textColor="@color/main_color_gray_dk"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/item_list_picFriends"
        app:layout_constraintTop_toTopOf="@+id/item_list_picFriends" />

    <ImageView
        android:id="@+id/item_ic_status-friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_online"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/item_name_list_friends"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/item_name_list_friends"
        app:layout_constraintBottom_toBottomOf="@+id/item_name_list_friends"/>

    <TextView
        android:id="@+id/item_friends_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_picFriends"
        app:layout_constraintStart_toStartOf="@id/item_name_list_friends"
        app:layout_constraintTop_toBottomOf="@+id/item_name_list_friends"/>

</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>