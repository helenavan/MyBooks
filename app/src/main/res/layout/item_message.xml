<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/message_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_marginLeft="8dp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/message_img"
        app:layout_constraintTop_toTopOf="@+id/message_img" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="0.5"
        android:background="@drawable/background_edit_submit"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/fab_margin"
        android:padding="4dp"
        android:text="message"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/message_userName"
        app:layout_constraintTop_toBottomOf="@+id/message_img_inside" />

    <ImageView
        android:id="@+id/message_img_inside"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/message_text"
        app:layout_constraintStart_toStartOf="@+id/message_userName"
        app:layout_constraintTop_toBottomOf="@+id/message_userName"
        />

</android.support.constraint.ConstraintLayout>