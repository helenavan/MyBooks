<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helenacorp.android.mybibliotheque.AccountActivity">

    <ImageView
        android:id="@+id/user_bcrg"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:background="@color/focused"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/user_line"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:backgroundTint="@color/Line"
        app:layout_constraintBottom_toBottomOf="@+id/user_bcrg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_bcrg" />

    <ImageView
        android:id="@+id/user_circle"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/acc_profil"
        app:layout_constraintBottom_toBottomOf="@+id/linearname"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_bcrg"
        app:layout_constraintVertical_bias="0.4" />

    <LinearLayout
        android:id="@+id/linearname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_camera">

        <TextView
            android:id="@+id/user_bjr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonjour :" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="mon nom" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearname"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/user_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J'ai x livres :"
            app:layout_constraintTop_toBottomOf="@+id/user_bjr" />

        <TextView
            android:id="@+id/user_numberBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2555"
            app:layout_constraintLeft_toRightOf="@+id/user_book"
            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>

    <Button
        android:id="@+id/user_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:background="@android:drawable/ic_menu_camera"
        app:layout_constraintLeft_toLeftOf="@+id/constraint"
        app:layout_constraintRight_toRightOf="@+id/constraint"
        app:layout_constraintTop_toBottomOf="@+id/user_circle" />

    <include
        layout="@layout/drawer_account"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>

